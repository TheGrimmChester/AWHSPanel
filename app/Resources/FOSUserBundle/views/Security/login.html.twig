{% extends '::'~awhs.template~'/base_login.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}{{ app_name }} - Login{% endblock %}

{% block fastNavigation %}{% endblock %}

{% block pageHeader %}{% endblock %}
{% block description %}Sign into your account and start managing Wake on Wan schedules for your computers.{% endblock %}
{% block keywords %}WoW, WoL, Wake on Wan, Wake on Lan, Cron, Automated{% endblock %}

{% block sidebarMenu %}
    {% block sidebarMenuDashboard %}{% endblock %}
    {% block sidebarMenuMore %}{% endblock %}
{% endblock %}

{% block content %}
    {% block fos_user_content %}
        <div class="container">
            <div style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div style="text-align: center;">
					<span style="color: #0993d7; font-size: 45px;">AWHS</span>
					<span style="color: #808080; font-size: 45px; font-weight: 300;">Panel</span>
				</div>
				<div style="text-align: center;">
					<span style="color: #808080; font-size: 15px;">Automated hosting provider</span>
				</div>
                <hr>
                <div class="panel" style="border-color: #1a2229;">
                    <div class="panel-heading" style="background-color: #f9f9f9;border-bottom: 1px solid #cacaca">
                        <div class="panel-title">Login</div>
                    </div>
                    <div style="background-color: #f9f9f9;" class="panel-body">
                        {% if error %}
                            <div style="text-align:center">
                                ... {{ error.messageKey|trans(error.messageData, 'security') }} ...
                            </div>
                        {% endif %}

                        <form action="{{ path("fos_user_security_check") }}" method="post">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                            <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                <input id="username" name="_username" type="text" class="form-control" value=""
                                       placeholder="Username" required="required">
                            </div>

                            <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                <input id="password" name="_password" type="password" class="form-control"
                                       placeholder="Password" required="required">
                            </div>

                            <div class="input-group">
                                <div class="checkbox">
                                    <label>
                                        <input id="remember_me" type="checkbox" name="_remember_me" value="1"> Remember
                                        Me
                                    </label>
                                </div>
                            </div>

                            <div style="margin-top:10px" class="form-group">
                                <div class="col-sm-12 controls">
                                    <input type="submit" class="btn btn-primary" id="_submit" name="_submit"
                                           value="{{ 'security.login.submit'|trans }}"/>&nbsp;&nbsp;
                                    <a id="btn-fblogin" href="{{ path('fos_user_resetting_request') }}"
                                       class="btn btn-primary">Forgot your password ?</a>

                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12 control">
                                    Not registered ?
                                    <a href="{{ path('fos_user_registration_register') }}">
                                        Sign Up
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% endblock fos_user_content %}
{% endblock %}