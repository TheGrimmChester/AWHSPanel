{% trans_default_domain 'FOSUserBundle' %}
<div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-10 col-md-10 col-lg-10{#col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad#}" >
			<div class="box">
				<div class="box-body">
					<div class="row">
						<div class="col-md-3 col-lg-3 " align="center"> <img src="{{ asset('/images/avatar5.png') }}" class="img-circle img-responsive"></div>
						<div class=" col-md-9 col-lg-9 "> 
						<table class="table table-user-information">
						<tbody>
						<tr>
							<td>ID</td>
							<td>{{ user.id }}</td>
						</tr>
						<tr>
							<td>{{ 'profile.show.username'|trans }}</td>
							<td>{{ user.username }}</td>
						</tr>
						<tr>
							<td>{{ 'profile.show.email'|trans }}</td>
							<td>{{ user.email }}</td>
						</tr>
						<tr>
							<td>Secret Key</td>
							<td>{{ user.userKey }}</td>
						</tr>
						<tr>
							<td>Encryption Key</td>
							<td>{{ user.encryptionKey }}</td>
						</tr>
						</tbody>
						</table>
                        <span class="pull-right">
                            <a href="{{ path('fos_user_profile_edit') }}" type="button" class="btn btn-sm btn-info"><i class="fa fa-pencil-square-o"></i></a>&nbsp;
                        </span>
						</div>
					</div>
				</div>
			</div>
        </div>
     </div>
</div>